#include<stdio.h>
#include<stdlib.h>
void printsol(int n,int x[])
{
	int i,j;
	char c[10][10];
	for(i=0;i<=n;i++)
	{
		for(j=0;j<=n;j++)
		{
			c[i][j]='x';
		}
	}
	for(i=1;i<=n;i++)
	{
		c[i][x[i]]='q';
	}
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n;j++)
		{
			printf("%c",c[i][j]);
		}
		printf("\n");
	}
}
int place(int x[],int k)
{
	int i;
	for(i=1;i<k;i++)
	{
		if(x[i]==x[k]||i-x[i]==k-x[k]||i+x[i]==k+x[k])
		{
			return 0;
		}
	}
	return 1;
	
}
void nqueens(int n)
{
	int x[10];
	int count=0;
	int k=1;
	x[k]=0;
	while(k!=0)
	{
		x[k]=x[k]+1;
		while((x[k]<=n) && (!place(x,k)))
		{
			x[k]=x[k]+1;
		}
			if(x[k]<=n)
			{
				if(k==n)
				{	
					count++;
					printf("The No of Solutions are %d",count);
					printsol(n,x);
					
				}
				else
				{
					k++;
					x[k]=0;
				}
			}
			else
			{
				k--;
			}
		}
	
	return;
}
int main()
{
	int n;
	printf("Enter the No of Queens");
	scanf("%d",&n);
	nqueens(n);
	return 0;
}
